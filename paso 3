from servicios.gestor_cuentas import GestorCuentas

def main():
    print("=== Sistema Bancario ===")
    gestor = GestorCuentas()

    # Crear cuentas
    cuenta1 = gestor.crear_cuenta("Mateo", 100)
    cuenta2 = gestor.crear_cuenta("Ana")

    # Operaciones
    cuenta1.depositar(50)
    cuenta2.depositar(200)
    cuenta1.retirar(30)

    # Mostrar cuentas
    gestor.mostrar_cuentas()

    # Al finalizar el programa, los destructores (__del__) se ejecutarán automáticamente
    # cuando los objetos sean eliminados de memoria.
    print("Fin del programa. Los destructores se activarán al liberar objetos.")

if __name__ == "__main__":
    main()
